generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////
// ENUMS
//////////////////////////////////////

enum UserRole {
  ADMIN
  COMMERCIAL
}

enum PaymentMethod {
  CASH
  CHECK
  BANK_TRANSFER
  CREDIT_CARD
  MOBILE_PAYMENT
}

enum PurchaseInvoiceType {
  PURCHASE_ORDER
  PURCHASE_INVOICE
  PURCHASE_REFUND // CREDIT NOTE FROM SUPPLIER
}

enum SaleInvoiceType {
  QUOTATION
  DELIVERY_NOTE
  SALE_INVOICE
  SALE_REFUND // CREDIT NOTE FOR CUSTOMER
  DELIVERY_NOTE_OUT // FACTURE DE SORTIE
}

enum InvoiceStatus {
  DRAFT
  VALIDATED
  PAID
  CANCELLED
}

//////////////////////////////////////
// USER
//////////////////////////////////////

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  telephone  String?
  firstName  String?
  lastName   String?
  role       UserRole  @default(COMMERCIAL)
  createdAt  DateTime  @default(now())
}

//////////////////////////////////////
// CATEGORY
//////////////////////////////////////

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  products    Product[]
}

//////////////////////////////////////
// CLIENT
//////////////////////////////////////

model Client {
  id           Int             @id @default(autoincrement())
  name         String
  phone        String?
  address      String?
  taxNumber    String?

  saleInvoices SaleInvoice[]
  payments     Payment[]
}

//////////////////////////////////////
// SUPPLIER
//////////////////////////////////////

model Supplier {
  id               Int                 @id @default(autoincrement())
  code             String
  name             String
  taxNumber        String?
  phone            String?
  address          String?
  bankRib          String?

  purchaseInvoices PurchaseInvoice[]
  payments         Payment[]
}

//////////////////////////////////////
// PRODUCT
//////////////////////////////////////

model Product {
  id            Int       @id @default(autoincrement())
  reference     String
  internalCode  String
  name          String

  stock         Int       @default(0)
  minStock      Int       @default(0)
  purchasePrice Float
  marginPercent Float
  salePrice     Float
  discount      Float     @default(0)
  vat           Float     @default(19)

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  purchaseInvoiceItems PurchaseInvoiceItem[]
  saleInvoiceItems     SaleInvoiceItem[]
}

//////////////////////////////////////
// PURCHASE INVOICE
//////////////////////////////////////

model PurchaseInvoice {
  id            Int                     @id @default(autoincrement())
  invoiceNumber String
  date          DateTime                @default(now())
  type          PurchaseInvoiceType
  status        InvoiceStatus           @default(DRAFT)

  // CREDIT NOTE RELATION (self-relational)
  originalInvoiceId Int?
  originalInvoice   PurchaseInvoice? @relation("PurchaseRefunds", fields: [originalInvoiceId], references: [id])
  refunds           PurchaseInvoice[] @relation("PurchaseRefunds")

  pdfUrl        String?

  supplierId    Int
  supplier      Supplier                @relation(fields: [supplierId], references: [id])

  items         PurchaseInvoiceItem[]

  payments      Payment[]               @relation("PurchaseInvoicePayments")

  totalHT       Float                   @default(0)
  totalTTC      Float                   @default(0)

  createdAt     DateTime                @default(now())
}

model PurchaseInvoiceItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  price     Float

  invoiceId Int
  productId Int

  invoice   PurchaseInvoice @relation(fields: [invoiceId], references: [id])
  product   Product         @relation(fields: [productId], references: [id])
}

//////////////////////////////////////
// SALE INVOICE
//////////////////////////////////////

model SaleInvoice {
  id            Int                @id @default(autoincrement())
  invoiceNumber String
  date          DateTime           @default(now())
  startDate     DateTime?          // Optional start date
  endDate       DateTime?          // Optional end date
  type          SaleInvoiceType
  status        InvoiceStatus      @default(DRAFT)
  taxStamp      Float              @default(1)
  // CREDIT NOTE RELATION (self-relational)
  originalInvoiceId Int?
  originalInvoice   SaleInvoice? @relation("SaleRefunds", fields: [originalInvoiceId], references: [id])
  refunds           SaleInvoice[] @relation("SaleRefunds")

  clientId      Int?
  client        Client?             @relation(fields: [clientId], references: [id])
  
  driverId      Int?               // Optional driver relation
  driver        Driver?             @relation(fields: [driverId], references: [id])

  items         SaleInvoiceItem[]
  payments      Payment[]          @relation("SaleInvoicePayments")

  totalHT       Float              @default(0)
  totalTTC      Float              @default(0)

  createdAt     DateTime           @default(now())
}

model SaleInvoiceItem {
  id        Int    @id @default(autoincrement())
  quantity  Int
  price     Float

  vatRate   Float   @default(0)
  vatAmount Float   @default(0)

  invoiceId Int
  productId Int

  invoice   SaleInvoice @relation(fields: [invoiceId], references: [id])
  product   Product     @relation(fields: [productId], references: [id])
}

//////////////////////////////////////
// PAYMENTS
//////////////////////////////////////

model Payment {
  id       Int           @id @default(autoincrement())
  amount   Float
  method   PaymentMethod
  createdAt DateTime     @default(now())

  purchaseInvoiceId Int?
  purchaseInvoice   PurchaseInvoice? @relation("PurchaseInvoicePayments", fields: [purchaseInvoiceId], references: [id])

  supplierId        Int?
  supplier          Supplier?        @relation(fields: [supplierId], references: [id])

  saleInvoiceId     Int?
  saleInvoice       SaleInvoice?     @relation("SaleInvoicePayments", fields: [saleInvoiceId], references: [id])

  clientId          Int?
  client            Client?          @relation(fields: [clientId], references: [id])
}

//////////////////////////////////////
// COMPANY SETTINGS
//////////////////////////////////////

model CompanySettings {
  id          Int     @id @default(autoincrement())
  companyName String?
  address     String?
  phone       String?
  taxNumber   String?
  logo        String?
  rib         String?
  email       String?
}

model Driver {
  id            Int     @id @default(autoincrement())
  firstName     String
  lastName      String
  phone         String?
  cin           String?
  licenseNumber String?
  active        Boolean  @default(true)
  saleInvoices  SaleInvoice[] // One driver can have many sale invoices
  carId Int?
  car   Car? @relation(fields: [carId], references: [id])
}

model Car {
  id            Int      @id @default(autoincrement())
  registration  String   @unique
  brand         String?
  model         String?
  year          Int?
  driver   Driver[]   // driver can have multiple cars 

  createdAt DateTime @default(now())
}


model Brand {
  id        Int      @id @default(autoincrement())
  name      String    @unique
  description String?
  img String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}